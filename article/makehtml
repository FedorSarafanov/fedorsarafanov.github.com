def timeAsrfc822 ( theTime ) :

    import rfc822
    return rfc822 . formatdate ( rfc822 . mktime_tz ( rfc822 . parsedate_tz ( theTime . strftime ( "%a, %d %b %Y %H:%M:%S" ) ) ) )

import datetime
print(timeAsrfc822(datetime.datetime.now()))
    



