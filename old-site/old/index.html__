    <script>
        function getStyle(elem, name) {if (elem.style[name]) return elem.style[name];else if (elem.currentStyle) return elem.currentStyle[name];else if (document.defaultView && document.defaultView.getComputedStyle) {name = name.replace(/([A-Z])/g,"-$1");name = name.toLowerCase();var s = document.defaultView.getComputedStyle(elem,"");return s && s.getPropertyValue(name);} else return null;}    

        window.onload = function loaded(){
            // var Article = document.getElementsByTagName("article")[0];
            if (localStorage.getItem("article-font")!=null){
                var Font = document.querySelector(".font")
                Font.style.fontSize = localStorage.getItem("article-font");
            }
            if (localStorage.getItem("lock-menu")==1){                
                document.getElementById("lock").classList.add("icon-lock");
                document.getElementById("lock").classList.remove("icon-lock-open");
                // document.querySelector('#menu').classList.toggle("show-menu");
            }         
        }
        document.querySelector(".icon-menu").onclick = function(){
            document.querySelector('#menu').classList.toggle("show-menu")
        }
        document.querySelector(".content").onclick = function(){
            if (localStorage.getItem("lock-menu")!=1){
                 document.querySelector('#menu').classList.remove("show-menu")
            }
        }  
        document.getElementsByTagName("nav")[0].onclick = function(){
            if (localStorage.getItem("lock-menu")!=1){
                 document.querySelector('#menu').classList.remove("show-menu")
            }
        } 
        document.querySelector(".plus").onclick = function(){
            var Article = document.getElementsByTagName("article")[0];
            Article.style.fontSize = (Number(getStyle(Article,'font-size').replace('px',''))+1)+'px';   
            var Font = document.querySelector(".font")             
            Font.style.fontSize = (Number(getStyle(Font,'font-size').replace('px',''))+1)+'px'; 
            Font.textContent=Font.style.fontSize;
            localStorage.setItem("article-font",Article.style.fontSize);
        }  
        document.querySelector(".minus").onclick = function(){
            var Article = document.getElementsByTagName("article")[0];
            Article.style.fontSize = (Number(getStyle(Article,'font-size').replace('px',''))-1)+'px';   
            var Font = document.querySelector(".font")             
            Font.style.fontSize = (Number(getStyle(Font,'font-size').replace('px',''))-1)+'px'; 
            Font.textContent=Font.style.fontSize;
            localStorage.setItem("article-font",Article.style.fontSize);
        }           
        document.getElementById("lock").onclick = function(){
            document.getElementById("lock").classList.toggle("icon-lock");
            document.getElementById("lock").classList.toggle("icon-lock-open");
            if (localStorage.getItem("lock-menu")==1){
                localStorage.setItem("lock-menu",0);
            }else{
                localStorage.setItem("lock-menu",1);
            }
        }  
    </script>    
